<%= form_for [@company, @job] do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </p>

  <p>
    <%= f.label :level_of_interest %>
    <%= f.number_field :level_of_interest %>
  </p>

  <p>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </p>

  <p class="category-dropdown">
    <%= f.label :category_id %>
    <%= f.collection_select :category_id, @categories.order(:title), :id, :title %>
    <%= link_to "Create New Category", new_category_path %>
  </p>

  <%= f.submit %>
<% end %>
